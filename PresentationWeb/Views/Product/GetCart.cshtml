@model IEnumerable<CartDTO>
@{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
}

 <div class="row mt-1 mb-2">
@{
    
 foreach (var item in Model)
    {
            
                  <div class="col-4 my-12 " >

                 

                                <div class="card card-size-250 card-product">


                                <div class="card-body">
                                 <img class="card-img-top" src=@Url.Content(@item.ProductImgPath) alt="Card image">
                                    <h4 class="card-title">@item.Name</h4>
                                    <p class="card-text">Price: $@item.Price</p>
                                    <p class="card-text">Count : @item.Count</p>
                                    <p class="card-text">Sum : $@item.Sum</p>
                                    <div class="width180px">
                                     <form method="post" asp-controller="Product" asp-action="Buy">
                                     <input type="hidden" value="@item.Sum" name="Sum">
                                        <input type="hidden" value="@item.Id" name="CartId">

                                     <button type="submit" class="btn btn-success width-100" >
                                    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                    Buy
                                </button>
                                </form>
                                </div>
                                <form method="post" asp-controller="Product" asp-action="Delete">
                                     <input type="hidden" value="@item.Sum" name="Sum">
                                        <input type="hidden" value="@item.Id" name="CartId">
                                 <button type="submit" class="btn btn-danger width-100" >
                                    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                    Delete

                                </button>
                                
                                
                                 
                                 </form>
                                </div>
                                </div>
                </div>

        }

    }



</div>




    