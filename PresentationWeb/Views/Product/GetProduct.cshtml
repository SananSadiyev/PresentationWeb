@model ProductDTO
@{
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    } 


<div class="row mt-1 mb-2">
            
            <div class="col-4 my-4" >
                <div class="card card-size-250 card-product">
                <img class="card-img-top " src=@Url.Content(Model.ImgPath) alt="Card image"> <!--card-img-size-50-->
                <div class="card-body">
                    <h4 class="card-title">@Model.Name</h4>
                    <p class="card-text">Marvel movie</p>
                    <p class="card-text">Price : @Model.Price </p>
                    <form method="post">
                        
                        <input type="number" value="1" class="form-control form-control-lg" min="1" max="99" name="Count" />
                          
                        <input type="hidden" value="@Model.Id" class="form-control form-control-lg" name="ProductId" />

                    <button class="btn btn-primary" type="submit" asp-controller="Product" asp-action="AddCart" >Add to Cart</button>
                </form>
                </div>
                </div>
            </div>
</div>